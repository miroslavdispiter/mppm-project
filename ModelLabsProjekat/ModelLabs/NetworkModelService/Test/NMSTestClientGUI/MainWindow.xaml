<Window x:Class="NMSTestClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asset Test Client" Height="500" Width="730"
        Background="#1e1e2f" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2a2a3b"/>
            <Setter Property="BorderBrush" Value="#4ec9b0"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#4ec9b0"/>
            <Setter Property="Foreground" Value="#1e1e1e"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="RichTextBox">
            <Setter Property="Background" Value="#2a2a3b"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl Margin="10" Background="#2a2a3b" Foreground="White">
            <!-- 1 -->
            <TabItem Header="Get Values">
                <StackPanel Margin="10">
                    <TextBox x:Name="TbGetValuesGid"/>
                    <Button Content="Get Values" Click="BtnGetValues_Click"/>
                    <RichTextBox x:Name="RtbGetValues" Height="300"/>
                </StackPanel>
            </TabItem>

            <!-- 2 -->
            <TabItem Header="Extent Values">
                <StackPanel Margin="10">
                    <TextBox x:Name="TbExtentModelCode"/>
                    <Button Content="Get Extent Values" Click="BtnGetExtentValues_Click"/>
                    <RichTextBox x:Name="RtbExtentValues" Height="300"/>
                </StackPanel>
            </TabItem>

            <!-- 3 -->
            <TabItem Header="Related Values">
                <StackPanel Margin="10">
                    <TextBox x:Name="TbSourceGid"/>
                    <TextBox x:Name="TbAssociationProperty"/>
                    <TextBox x:Name="TbAssociationType"/>
                    <Button Content="Get Related Values" Click="BtnGetRelatedValues_Click"/>
                    <RichTextBox x:Name="RtbRelatedValues" Height="300"/>
                </StackPanel>
            </TabItem>

            <!-- 4 -->
            <TabItem Header="Seal Filter">
                <StackPanel Margin="10">
                    <TextBox x:Name="TbSealKind"/>
                    <Button Content="Show Seals by Kind" Click="BtnGetSealByKind_Click"/>
                    <RichTextBox x:Name="RtbSealKind" Height="300"/>
                </StackPanel>
            </TabItem>

            <!-- 5 -->
            <TabItem Header="AssetFunction Shortest ProgramID">
                <StackPanel Margin="10">
                    <Button Content="Find smallest ProgramID" Click="BtnMinProgramId_Click"/>
                    <RichTextBox x:Name="RtbMinProgram" Height="300"/>
                </StackPanel>
            </TabItem>

            <!-- 6 -->
            <TabItem Header="Assets by Type">
                <StackPanel Margin="10">
                    <TextBox x:Name="TbAssetType"/>
                    <Button Content="Filter Assets" Click="BtnFilterAssets_Click"/>
                    <RichTextBox x:Name="RtbAssetType" Height="300"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>